        <item name="textAppearanceBody1">@style/Theme.Marvel.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Theme.Marvel.TextAppearance.Body2</item>
        <item name="textAppearanceSubtitle1">@style/Theme.Marvel.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Theme.Marvel.TextAppearance.Subtitle2</item>
        <item name="textAppearanceCaption">@style/Theme.Marvel.TextAppearance.Caption</item>
        <item name="textAppearanceButton">@style/Theme.Marvel.TextAppearance.Button</item>
        <item name="textAppearanceOverline">@style/Theme.Marvel.TextAppearance.Overline</item>
